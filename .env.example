# NextAuth.js 설정
# 반드시 랜덤 문자열로 설정 (openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# 카카오 로그인
# https://developers.kakao.com/ 에서 앱 생성 후 발급
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# 구글 로그인
# https://console.cloud.google.com/ 에서 OAuth 2.0 클라이언트 생성
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 네이버 로그인
# https://developers.naver.com/ 에서 앱 생성 후 발급
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Supabase (기존)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Turso (기존)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=

# Content API 관리자 인증
# ADMIN_EMAILS: 관리자 이메일 목록 (쉼표 구분)
# CONTENT_API_SECRET: API 테스트/자동화용 Bearer 토큰 (선택)
ADMIN_EMAILS=admin@example.com
CONTENT_API_SECRET=
